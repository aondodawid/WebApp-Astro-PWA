---
const { btnText, btnBackground, hideSvg  } = Astro.props;
---

<button id="install" class="install-button" hidden="true" style={{background: btnBackground ?? 'linear-gradient(135deg, #4361ee, #3a0ca3)'}}>

  {!hideSvg && <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="download-icon"
  >
    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
    <polyline points="7 10 12 15 17 10"></polyline>
    <line x1="12" y1="15" x2="12" y2="3"></line>
  </svg>}
  <span>{btnText}</span>
</button>

<style>
   .install-button {
    color: white;
    border: none;
    border-radius: 10px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.25s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin: 0 auto;
    box-shadow: 0 4px 12px rgba(74, 97, 238, 0.2);
  }

  .install-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(74, 97, 238, 0.4);
    background: linear-gradient(135deg, #3a56e0, #2f0a94);
  }

  .install-button:active {
    transform: translateY(1px);
    box-shadow: 0 2px 8px rgba(74, 97, 238, 0.3);
  }

  .download-icon {
    margin-right: 2px;
  }
  @media (max-width: 480px) {
    .install-button {
      width: 100%;
      padding: 16px;
    }
  }
</style>
